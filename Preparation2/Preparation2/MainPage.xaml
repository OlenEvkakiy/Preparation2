<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Preparation2.MainPage"
             xmlns:strings="clr-namespace:Preparation2.Res;assembly=Preparation2">

    <StackLayout>
        <Label Style="{StaticResource BaseLabelStyle}" HorizontalOptions="Center" Text="{x:Static strings:AppStrings.HelloLabel}" Margin="0,10,0,0"/>
        <Entry Style="{StaticResource BaseEntryStyle}" Placeholder="{x:Static strings:AppStrings.USername}"/>
        <Entry  Style="{StaticResource BaseEntryStyle}" Placeholder="{x:Static strings:AppStrings.Password}"/>
        <Button Style="{StaticResource BaseButtonStyle}" Text="{x:Static strings:AppStrings.LogInButton}"/>
    </StackLayout>

</ContentPage>